@model List<Bulky.Models.Product>
@* <partial name="_Notification"/> *@
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Product
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Product Title</th>
        <th>Product Description</th>
        <th>Product ISBN</th>
        <th>Product Author</th>
        <th>List Price</th>
        <th>Price</th>
        <th>Price 50</th>
        <th>Price 100</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
    <tr>
        <td>
            @obj.Title
        </td>
        <td class="w-25">
            @obj.Description
        </td>
        <td>
            @obj.ISBN
        </td>
        <td>
            @obj.Author
        </td>
        <td>
            @obj.ListPrice
        </td>
        <td>
            @obj.Price
        </td>
        <td>
            @obj.Price50
        </td>
        <td>
            @obj.Price100
        </td>
        <td class="w-75 btn-group cent" role="group">
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                <i class="bi bi-trash"></i> Delete
            </a>
        </td>
    </tr>
    }
    </tbody>
</table>